<div class="col-md-12">
  <div class="group">

    <span class="pull-right">
        <% if current_user && current_user.is_member_of?(@group) %>
        <%= link_to("我来评论", new_group_post_path(@group), class: "btn btn-default pull-right")%>
        <label class="label label-success"> 已收藏 </label>
        <%= link_to("放弃收藏", quit_group_path(@group), method: :post, class: "btn btn-default")%>
        <% else %>
        <label class="label label-warning"> 写评论，请收藏 </label>
        <%= link_to("收藏", join_group_path(@group), method: :post, class: "btn btn-default") %>
      <% end %>
    </span>
    <% if current_user == @group.user %>
    <%= link_to("修改", edit_group_path(@group), class: "btn btn-primary pull-right") %>
  <% end %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td><%= @group.title %></td>
        <td><%= @group.description %></td>
      </tr>
        <table class="table">
    <thead>
     <tr>
        <th>评论内容</th>
        <th>评论人</th>
        <th>评论时间</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at %></td>
        </tr>
      <tbody>
      <% end %>
  </table>

  <div class="text-center">
     <%= will_paginate @posts %>
  </div>

</div>
