<div class="col-md-12">

  <h2 class="text-center"> 我的评论 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> 电影名称 </th>
        <th> 评论内容 </th>
        <th> 最新评论 </th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <th> <%= post.group.title %> </th>
          <th> <%= post.content %> </th>
          <th> <%= post.updated_at %> </th>
          <th> <%= link_to('修改', edit_group_post_path(post.group, post), class: "btn btn-default btn-xs") %></th>
          <th> <%= link_to('删除', group_post_path(post.group, post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default btn-xs") %></th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
